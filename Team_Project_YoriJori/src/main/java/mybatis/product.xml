<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="product.model.Product">

<select id="GetAllProduct" resultType="product.model.ProductBean">
select * from product

<if test="whatColumn=='se'">
where pd_category like #{keyword}
</if>


</select>


	<select id="GetTotalCount" resultType="int">
		select count(*) from product
		<if test="whatColumn=='se'">
			where pd_category like #{keyword}
		</if>
	</select>
	
	<select id="GetByNum"  resultType="product.model.ProductBean">
	select * from product
	where pd_num=#{pdnum}
	</select>
	

</mapper>